<div class="columns_image_text" style="background-color:{{section.settings.bg_color }};">
  <div class="page-width">
    <div class="section_header">
      <p class="smalltitle">{{ section.settings.smalltitle }}</p>
      <h3>{{ section.settings.heading }}</h3>
      <div class="subtitle">{{ section.settings.subtitle }}</div>
    </div>
    <div class="list_col">
      {%- case section.blocks.size -%}
        {%- when 1 -%}
          {%- assign grid_width_class = 'col--one-whole' -%}
        {%- when 2 -%}
          {%- assign grid_width_class = 'col--one-half' -%}
        {%- when 3 -%}
          {%- assign grid_width_class = 'col--one-third' -%}
        {%- else -%}
          {%- assign grid_width_class = 'col--one-quarter' -%}
      {%- endcase -%}
      
      {% for block in section.blocks %}
      <div class="colitem colitem-{{ forloop.index }} {{ grid_width_class }}">
        <div class="content">
          <img src="{{block.settings.image | img_url: '' }}" alt="{{block.settings.title}}" />
          <div class="meta">
            <h4>{{block.settings.title}}</h4>
            <div class="text">{{block.settings.text}}</div>
            {% if block.settings.button_link != blank %}<a href="{{block.settings.button_link}}">{{block.settings.button_text}}</a>{% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<style>
  {% for block in section.blocks %}
  .columns_image_text .colitem-{{ forloop.index }} .meta a{
    background-color: {{block.settings.bg_button}};
    transition: all 0.3s ease;
  }
  .columns_image_text .colitem-{{ forloop.index }} .meta a:hover{
    background-color: {{block.settings.bg_button_hover}}
  }
  {% endfor %}
  .columns_image_text{
  	padding-top:{{section.settings.pt-top}}px;
  	padding-bottom: {{section.settings.pt-bottom}}px;
  }
  
</style>
{% schema %}
  {
    "name": "Columns Image text",
    "settings": [
	{
      "type": "range",
      "id": "pt-top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
	{
      "type": "range",
      "id": "pt-bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    },
	{
      "type": "color",
      "id": "bg_color",
      "label": "Background section"
    },
	{
      "type": "text",
      "id": "smalltitle",
      "label": "Small Title"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "richtext",
      "id": "subtitle",
      "label": "SubTitle"
    }
],
"blocks": [
      {
        "type": "content",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          { 
             "type": "text",
             "id": "title",
             "label": "Title"
          },
          { 
             "type": "textarea",
             "id": "text",
             "label": "Text"
          },
          { 
             "type": "text",
             "id": "button_text",
             "label": "Button text",
			"default" : "Select Plan"
          },
          { 
             "type": "url",
             "id": "button_link",
             "label": "Button Link"
          },
		  { 
             "type": "color",
             "id": "bg_button",
             "label": "Background Button"
          },
		  { 
             "type": "color",
             "id": "bg_button_hover",
             "label": "Background Button Hover"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Columns Image Text",
      "category": "Text"
	  
    }
]
  }
{% endschema %}

