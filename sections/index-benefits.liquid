<section class="section__sponsor">
	<div class="page-width">
      <h3>{{section.settings.title}}</h3>
      <div class="slider">  
        {% for block in section.blocks %} 
            <div class="sponsor">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}" width="auto" height="auto">
              <div class="text">{{ block.settings.title }}</div>
            </div>
        {% endfor %}
      </div>  
  	</div>
</section>

