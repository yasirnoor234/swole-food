<style>
  @media only screen and (max-width: 600px) {
    #gallery img {
      margin: unset !important;
    }   
  }
  #gallery button{
    display:none !important;
  }
  #gallery img {
    width: 175px !important;
    height: auto;
    object-fit: contain;
    margin: 0 auto;
  }
  div#gallery {
    margin: 0 auto;
  }
 .slick-track {
    gap: 50px;
    display: flex;
    align-content: flex-end;
    align-items: center;
    flex-wrap: nowrap;
  }
  #gallery {
    margin: 1rem;
    padding-bottom: 80px;
  }
 #gallery img{
    margin: .2rem;
  }
  .marquee-banner h3 {
    padding-left: 30px;
    padding-top:50px;
    font-weight: 600;
    font-size: 1.8em;
    font-family: 'Montserrat';
  }
  @media only screen and (max-width: 749px) {
    .marquee-banner h3 {
        padding-left:0px;
        font-size: 1.4em;
    }
  }
</style>

<div class="marquee-banner">
  <div class="page-width">
  <h3>{{ section.settings.heading }}</h3>
  <div id="gallery">
    <img src="{{ section.settings.img1 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img2 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img3 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img4 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img5 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img6 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img7 | img_url: 'master' }}" width="auto" height="auto">
    <img src="{{ section.settings.img8 | img_url: 'master' }}" width="auto" height="auto"> 
    <img src="{{ section.settings.img9 | img_url: 'master' }}" width="auto" height="auto">
  </div>
  </div>
</div>




