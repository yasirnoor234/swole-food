<script>
  //add stylesheet
  function addCss(fileName) {

    var head = document.head;
    var link = document.createElement("link");

    link.type = "text/css";
    link.rel = "stylesheet";
    link.href = fileName;

    head.appendChild(link);
  }
  var cssURL = wsgData.server_link; 
  cssURL = cssURL.replace('shop_assets/wsg-index.js','style/wsg-cart.css');
 
  addCss(cssURL);
</script>

