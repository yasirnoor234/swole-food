<script>
  var fixmeTop = $('.banner_product .bottom').offset().top;
  console.log(fixmeTop);
  $(window).scroll(function() {
    var currentScroll = $(window).scrollTop();
    console.log(currentScroll);
    if (currentScroll >= fixmeTop) {
      $('.banner_product .bottom').addClass('fixed');
    } else {
      $('.banner_product .bottom').removeClass('fixed');
    }
  });
</script>
